name: 班固米游戏收藏数据同步更新到VNDB

on:
  workflow_dispatch:
  schedule:
    - cron: '0 1 * * *' # 每天定时运行

jobs:
  sync:
    runs-on: ubuntu-latest

    steps:
    - name: 检出代码
      uses: actions/checkout@v3

    - name: 设置 Python 环境
      uses: actions/setup-python@v3
      with:
        python-version: 3.x

    - name: 安装依赖
      run: |
        python -m pip install --upgrade pip
        pip install requests pandas openpyxl tqdm

    - name: 运行 BGM 脚本获取收藏
      run: python bangumi-vndb/bangumi.py
      env:
        BGM_ACCESS_TOKEN: ${{ secrets.BGM_ACCESS_TOKEN }}

    - name: 移动收藏列表到预期位置
      run: mv collection_list.json bangumi-vndb/collection_list.json

    - name: 上传收藏列表作为工件
      uses: actions/upload-artifact@v4
      with:
        name: collection_list
        path: bangumi-vndb/collection_list.json

    - name: 列出当前目录内容以调试
      run: ls -R

    - name: 运行 VNDB 脚本同步收藏
      run: python ./bangumi-vndb/VNDB.py
      env:
        VNDB_TOKEN: ${{ secrets.VNDB_TOKEN }}
        SYNC_LOCAL: true
        DOWNLOAD_VNDB: false
        HTTP_PROXY: ${{ secrets.HTTP_PROXY }}
        HTTPS_PROXY: ${{ secrets.HTTPS_PROXY }}
